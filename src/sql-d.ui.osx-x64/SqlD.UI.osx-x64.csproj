<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<IsPackable>true</IsPackable>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<RuntimeIdentifiers>osx-x64</RuntimeIdentifiers>
		<TypeScriptToolsVersion>2.8</TypeScriptToolsVersion>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<RuntimeFrameworkVersion>3.1.0</RuntimeFrameworkVersion>
		<PlatformTarget>x64</PlatformTarget>
		<NuSpecFile>sql-d.ui.osx-x64.nuspec</NuSpecFile>
		<NuSpecBasePath>bin/$(Configuration)/netcoreapp3.1/osx-x64/publish/</NuSpecBasePath>
		<AssemblyName>SqlD.UI.osx-x64</AssemblyName>
		<StartupObject>SqlD.UI.Program</StartupObject>
		<RootNamespace>SqlD.UI</RootNamespace>
		<NoWarn>$(NoWarn);NU1603;NU5125;NU5100;CS0618</NoWarn>
	</PropertyGroup>

	<Import Project="../../version.props" />

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="3.1.0" />
		<PackageReference Include="Microsoft.Build.Tasks.Core" Version="16.3.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="3.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
		<PackageReference Include="NSwag.Annotations" Version="13.1.6" />
		<PackageReference Include="NSwag.AspNetCore" Version="13.1.6" />
		<PackageReference Include="System.Data.SQLite" Version="1.0.111" />
		<PackageReference Include="System.Data.SQLite.Core" Version="1.0.111" />
		<PackageReference Include="System.IO.Compression.ZipFile" Version="4.3.0" />
		<PackageReference Include="sql-d" Version="1.0.8" />
		<PackageReference Include="sql-d.start.osx-x64" Version="1.0.8" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="*.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="Views\**">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="wwwroot\**">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<None Update="sql-d.ui.osx-x64.nuspec">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
